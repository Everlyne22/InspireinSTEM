 #!/usr/bin/python
 # n is the number of term, d is the common diffe4rence, a is the first term
a = int(input("Enter the first term."))
d = int(input("Enter the common difference."))
n = int(input("Enter the number of terms."))
for i in range(1, n+1):
    n_term = a + (i - 1)* d 
    print(n_term)

s_n = (n /2) * ((2 * a) + (n -1) *d)
print(s_n) 